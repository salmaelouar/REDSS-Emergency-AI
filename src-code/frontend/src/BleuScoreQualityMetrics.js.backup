import React, { useState, useEffect } from 'react';
import {
  BarChart3, CheckCircle, AlertTriangle, ArrowLeft, RefreshCw,
  FileText, Activity, TrendingUp, Award, Eye
} from 'lucide-react';

function BleuScoreQualityMetrics({ callId, onBack, systemLanguage = 'en' }) {
  const [qualityData, setQualityData] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [selectedMetric, setSelectedMetric] = useState('both');

  // NEW: Live test field states
  const [liveTestText, setLiveTestText] = useState('');
  const [liveTestLoading, setLiveTestLoading] = useState(false);
  const [liveTestResult, setLiveTestResult] = useState(null);

  // NEW: Transcription metrics
  const [transcriptionMetrics, setTranscriptionMetrics] = useState(null);

  const API_URL = 'http://localhost:8000';

  const TRANSLATIONS = {
    en: {
      title: "Bleu Score & Quality Metrics",
      subtitle: "AI-Generated vs Gold Standard Comparison",
      overallScore: "Overall Quality Score",
      bleuAverage: "BLEU Average",
      cudaOverall: "CUDA Overall",
      qualityGrade: "Quality Grade",
      viewMetrics: "View Metrics:",
      both: "Both",
      bleuOnly: "BLEU Only",
      cudaOnly: "CUDA Only",
      bleuExplained: "BLEU Score Explained",
      cudaExplained: "CUDA Score Explained",
      calculating: "Calculating quality metrics...",
      noSelected: "No call selected",
      noData: "No quality data available",
      goBack: "Go Back",
      refresh: "Refresh",
      subjective: "Subjective",
      objective: "Objective",
      assessment: "Assessment",
      plan: "Plan",
      measures: "What it measures:",
      measuresDesc: "N-gram precision - how well word sequences match",
      bestFor: "Best for:",
      bestForDesc: "Translation quality, exact matching",
      limitation: "Limitation:",
      limitationDesc: "Penalizes valid paraphrases",
      cudaMeasures: "What it measures:",
      cudaMeasuresDesc: "Completion, Understanding, Detail, Accuracy",
      cudaBestFor: "Best for:",
      cudaBestForDesc: "Summary quality, content coverage, hallucination detection",
      cudaLimitation: "Limitation:",
      cudaLimitationDesc: "Simpler than BLEU (word-level only)",
      bleuMetrics: "BLEU Metrics",
      cudaMetrics: "CUDA Metrics",
      // NEW: Transcription Quality
      transcriptionQuality: "Transcription Quality",
      correctWords: "Correct Words",
      errors: "Errors",
      wordErrorRate: "Word Error Rate (WER)",
      // NEW: Live Test
      liveTest: "Live System Test",
      enterEmergencyText: "Enter emergency call text...",
      testSystem: "Test System",
      testing: "Testing...",
      systemTriage: "System Triage",
      expectedTriage: "Expected Triage",
      triageMatch: "Triage Match",
      soapComparison: "SOAP Comparison",
      match: "Match",
      mismatch: "Mismatch"
    },
    ja: {
      title: "抽出品質 (BLEU/CUDA) 解析",
      subtitle: "AI抽出結果と標準データの比較検証",
      overallScore: "総合品質スコア",
      bleuAverage: "平均BLEU精度",
      cudaOverall: "CUDA総合評価",
      qualityGrade: "品質グレード",
      viewMetrics: "表示メトリクス:",
      both: "両方表示",
      bleuOnly: "BLEUのみ",
      cudaOnly: "CUDAのみ",
      bleuExplained: "BLEUスコアの解説",
      cudaExplained: "CUDAスコアの解説",
      calculating: "品質メトリクスを計算中...",
      noSelected: "通報が選択されていません",
      noData: "利用可能な品質データがありません",
      goBack: "戻る",
      refresh: "更新",
      subjective: "主観的所見 (S)",
      objective: "客観的所見 (O)",
      assessment: "評価 (A)",
      plan: "計画 (P)",
      measures: "測定内容:",
      measuresDesc: "N-gramプレシジョン - 単語列の一致度",
      bestFor: "最適な用途:",
      bestForDesc: "翻訳品質、正確な一致",
      limitation: "制限事項:",
      limitationDesc: "適切な言い換えを減点する場合がある",
      cudaMeasures: "測定内容:",
      cudaMeasuresDesc: "網羅性、理解度、詳細度、正確性",
      cudaBestFor: "最適な用途:",
      cudaBestForDesc: "要約品質、内容の網羅性、ハルシネーション検出",
      cudaLimitation: "制限事項:",
      cudaLimitationDesc: "BLEUよりも単純（単語レベルのみ）",
      bleuMetrics: "BLEUメトリクス",
      cudaMetrics: "CUDAメトリクス"
    }
  };

  const t = TRANSLATIONS[systemLanguage] || TRANSLATIONS.en;

  const fetchQualityMetrics = async () => {
    if (!callId) {
      setError(t.noSelected);
      setLoading(false);
      return;
    }

    try {
      setLoading(true);
      setError(null);
      const response = await fetch(`${API_URL}/api/calls/${callId}/quality?lang=${systemLanguage}`);

      if (!response.ok) {
        throw new Error('Failed to fetch quality metrics');
      }

      const data = await response.json();
      setQualityData(data.metrics);
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    fetchQualityMetrics();
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, [callId, systemLanguage]);

  const getScoreColor = (score) => {
    if (score >= 0.6) return 'text-green-400';
    if (score >= 0.4) return 'text-yellow-400';
    if (score >= 0.2) return 'text-orange-400';
    return 'text-red-400';
  };

  const getScoreBg = (score) => {
    if (score >= 0.6) return 'bg-green-500';
    if (score >= 0.4) return 'bg-yellow-500';
    if (score >= 0.2) return 'bg-orange-500';
    return 'bg-red-500';
  };

  const getScoreBorder = (score) => {
    if (score >= 0.6) return 'border-green-500';
    if (score >= 0.4) return 'border-yellow-500';
    if (score >= 0.2) return 'border-orange-500';
    return 'border-red-500';
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-slate-950 p-8 flex flex-col items-center justify-center">
        <div className="w-full max-w-5xl space-y-8">
          <div className="flex justify-between items-center mb-4">
            <div className="h-10 w-64 bg-slate-800 rounded animate-shimmer"></div>
            <div className="h-10 w-10 bg-slate-800 rounded-full animate-shimmer"></div>
          </div>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div className="h-96 bg-slate-900/50 rounded-2xl animate-shimmer"></div>
            <div className="h-96 bg-slate-900/50 rounded-2xl animate-shimmer"></div>
          </div>
          <p className="text-blue-400 text-center animate-pulse mt-8 font-black tracking-[0.2em] uppercase text-sm">{t.calculating}</p>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-950 via-blue-950 to-slate-950 flex items-center justify-center">
        <div className="text-center">
          <AlertTriangle className="h-12 w-12 text-red-400 mx-auto mb-4" />
          <p className="text-white text-xl mb-4">Error: {error}</p>
          <button
            onClick={onBack}
            className="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg"
          >
            {t.goBack}
          </button>
        </div>
      </div>
    );
  }

  if (!qualityData) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-950 via-blue-950 to-slate-950 flex items-center justify-center">
        <p className="text-white text-xl">{t.noData}</p>
      </div>
    );
  }

  const overallScore = selectedMetric === 'bleu'
    ? qualityData.overall.bleu_avg
    : selectedMetric === 'cuda'
      ? qualityData.overall.cuda_overall
      : (qualityData.overall.bleu_avg + qualityData.overall.cuda_overall) / 2;

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-950 via-blue-950 to-slate-950 p-6">
      {/* Header */}
      <div className="max-w-7xl mx-auto mb-6">
        <div className="bg-slate-900/80 backdrop-blur-xl rounded-2xl shadow-2xl border border-blue-500/30 p-6">
          <div className="flex items-center justify-between">
            <div className="flex items-center space-x-4">
              <button
                onClick={onBack}
                className="bg-slate-800 hover:bg-slate-700 p-2 rounded-lg text-white transition-colors"
              >
                <ArrowLeft className="h-6 w-6" />
              </button>
              <div className="bg-gradient-to-br from-blue-500 to-blue-600 p-3 rounded-xl">
                <BarChart3 className="h-8 w-8 text-white" />
              </div>
              <div>
                <h1 className="text-3xl font-bold text-white">{t.title}</h1>
                <p className="text-blue-300 text-sm">{t.subtitle}</p>
              </div>
            </div>
            <div className="text-right">
              <p className="text-slate-400 text-sm">Call ID: {callId}</p>
              <button
                onClick={fetchQualityMetrics}
                className="mt-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm flex items-center space-x-2"
              >
                <RefreshCw className="h-4 w-4" />
                <span>{t.refresh}</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      {/* Metric Selector */}
      <div className="max-w-7xl mx-auto mb-6">
        <div className="bg-slate-900/80 backdrop-blur-xl rounded-xl p-4 border border-slate-800">
          <div className="flex items-center justify-between">
            <p className="text-white font-semibold">{t.viewMetrics}</p>
            <div className="flex space-x-2">
              <button
                onClick={() => setSelectedMetric('both')}
                className={`px-4 py-2 rounded-lg transition-colors ${selectedMetric === 'both'
                  ? 'bg-blue-600 text-white'
                  : 'bg-slate-800 text-slate-400 hover:bg-slate-700'
                  }`}
              >
                {t.both}
              </button>
              <button
                onClick={() => setSelectedMetric('bleu')}
                className={`px-4 py-2 rounded-lg transition-colors ${selectedMetric === 'bleu'
                  ? 'bg-purple-600 text-white'
                  : 'bg-slate-800 text-slate-400 hover:bg-slate-700'
                  }`}
              >
                {t.bleuOnly}
              </button>
              <button
                onClick={() => setSelectedMetric('cuda')}
                className={`px-4 py-2 rounded-lg transition-colors ${selectedMetric === 'cuda'
                  ? 'bg-green-600 text-white'
                  : 'bg-slate-800 text-slate-400 hover:bg-slate-700'
                  }`}
              >
                {t.cudaOnly}
              </button>
            </div>
          </div>
        </div>
      </div>

      {/* Overall Score */}
      <div className="max-w-7xl mx-auto mb-6">
        <div className={`bg-slate-900/80 backdrop-blur-xl rounded-2xl shadow-2xl border-l-8 ${getScoreBorder(overallScore)} p-6`}>
          <div className="flex items-center justify-between mb-4">
            <h2 className="text-2xl font-bold text-white flex items-center">
              <Award className="h-6 w-6 mr-2 text-yellow-400" />
              {t.overallScore}
            </h2>
            <span className={`px-6 py-3 rounded-full text-white font-bold text-2xl ${getScoreBg(overallScore)}`}>
              {(overallScore * 100).toFixed(1)}%
            </span>
          </div>

          <div className="w-full bg-slate-800 rounded-full h-4 mb-4">
            <div
              className={`h-full rounded-full transition-all duration-1000 ${getScoreBg(overallScore)}`}
              style={{ width: `${overallScore * 100}%` }}
            />
          </div>

          <div className="grid grid-cols-3 gap-4">
            <div className="bg-slate-800/50 rounded-lg p-4">
              <p className="text-slate-400 text-sm mb-1">{t.bleuAverage}</p>
              <p className={`text-3xl font-bold ${getScoreColor(qualityData.overall.bleu_avg)}`}>
                {(qualityData.overall.bleu_avg * 100).toFixed(1)}%
              </p>
            </div>
            <div className="bg-slate-800/50 rounded-lg p-4">
              <p className="text-slate-400 text-sm mb-1">{t.cudaOverall}</p>
              <p className={`text-3xl font-bold ${getScoreColor(qualityData.overall.cuda_overall)}`}>
                {(qualityData.overall.cuda_overall * 100).toFixed(1)}%
              </p>
            </div>
            <div className="bg-slate-800/50 rounded-lg p-4">
              <p className="text-slate-400 text-sm mb-1">{t.qualityGrade}</p>
              <p className={`text-3xl font-bold ${getScoreColor(overallScore)}`}>
                {overallScore >= 0.7 ? 'A+' : overallScore >= 0.6 ? 'A' : overallScore >= 0.4 ? 'B' : overallScore >= 0.2 ? 'C' : 'D'}
              </p>
            </div>
          </div>
        </div>
      </div>

      {/* SOAP Field Comparison */}
      <div className="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-6">
        {['subjective', 'objective', 'assessment', 'plan'].map((field) => (
          <SOAPFieldCard
            key={field}
            field={field}
            data={qualityData.fields[field]}
            selectedMetric={selectedMetric}
            getScoreColor={getScoreColor}
            getScoreBg={getScoreBg}
            t={t}
          />
        ))}
      </div>

      {/* Metric Explanations */}
      <div className="max-w-7xl mx-auto mt-6 grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div className="bg-slate-900/80 backdrop-blur-xl rounded-2xl shadow-xl border border-purple-500/30 p-6">
          <h3 className="text-xl font-bold text-white mb-4 flex items-center">
            <Activity className="h-6 w-6 mr-2 text-purple-400" />
            {t.bleuExplained}
          </h3>
          <div className="space-y-3 text-sm">
            <div className="flex items-start space-x-2">
              <CheckCircle className="h-5 w-5 text-green-400 mt-0.5 flex-shrink-0" />
              <div>
                <p className="text-white font-semibold">{t.measures}</p>
                <p className="text-slate-400">{t.measuresDesc}</p>
              </div>
            </div>
            <div className="flex items-start space-x-2">
              <CheckCircle className="h-5 w-5 text-green-400 mt-0.5 flex-shrink-0" />
              <div>
                <p className="text-white font-semibold">{t.bestFor}</p>
                <p className="text-slate-400">{t.bestForDesc}</p>
              </div>
            </div>
            <div className="flex items-start space-x-2">
              <AlertTriangle className="h-5 w-5 text-yellow-400 mt-0.5 flex-shrink-0" />
              <div>
                <p className="text-white font-semibold">{t.limitation}</p>
                <p className="text-slate-400">{t.limitationDesc}</p>
              </div>
            </div>
          </div>
        </div>

        <div className="bg-slate-900/80 backdrop-blur-xl rounded-2xl shadow-xl border border-green-500/30 p-6">
          <h3 className="text-xl font-bold text-white mb-4 flex items-center">
            <TrendingUp className="h-6 w-6 mr-2 text-green-400" />
            {t.cudaExplained}
          </h3>
          <div className="space-y-3 text-sm">
            <div className="flex items-start space-x-2">
              <CheckCircle className="h-5 w-5 text-green-400 mt-0.5 flex-shrink-0" />
              <div>
                <p className="text-white font-semibold">{t.cudaMeasures}</p>
                <p className="text-slate-400">{t.cudaMeasuresDesc}</p>
              </div>
            </div>
            <div className="flex items-start space-x-2">
              <CheckCircle className="h-5 w-5 text-green-400 mt-0.5 flex-shrink-0" />
              <div>
                <p className="text-white font-semibold">{t.cudaBestFor}</p>
                <p className="text-slate-400">{t.cudaBestForDesc}</p>
              </div>
            </div>
            <div className="flex items-start space-x-2">
              <AlertTriangle className="h-5 w-5 text-yellow-400 mt-0.5 flex-shrink-0" />
              <div>
                <p className="text-white font-semibold">{t.cudaLimitation}</p>
                <p className="text-slate-400">{t.cudaLimitationDesc}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}

function SOAPFieldCard({ field, data, selectedMetric, getScoreColor, getScoreBg, t }) {
  const fieldIcons = {
    subjective: <FileText className="h-6 w-6" />,
    objective: <Eye className="h-6 w-6" />,
    assessment: <Activity className="h-6 w-6" />,
    plan: <CheckCircle className="h-6 w-6" />
  };

  const fieldColors = {
    subjective: 'from-blue-500/20 to-blue-600/20 border-blue-500/50',
    objective: 'from-green-500/20 to-green-600/20 border-green-500/50',
    assessment: 'from-orange-500/20 to-orange-600/20 border-orange-500/50',
    plan: 'from-purple-500/20 to-purple-600/20 border-purple-500/50'
  };

  const showBLEU = selectedMetric === 'both' || selectedMetric === 'bleu';
  const showCUDA = selectedMetric === 'both' || selectedMetric === 'cuda';

  return (
    <div className={`bg-gradient-to-br ${fieldColors[field]} backdrop-blur-xl rounded-2xl shadow-xl border overflow-hidden`}>
      <div className="bg-slate-900/80 px-6 py-4 border-b border-slate-700">
        <h3 className="text-xl font-bold text-white flex items-center capitalize">
          {fieldIcons[field]}
          <span className="ml-2">{t[field]}</span>
        </h3>
      </div>

      <div className="p-6 space-y-4">
        {showBLEU && (
          <div className="bg-slate-800/70 rounded-xl p-4">
            <h4 className="text-purple-400 font-semibold mb-3 text-sm">{t.bleuMetrics}</h4>
            <div className="grid grid-cols-2 gap-3">
              {Object.entries(data.bleu).map(([key, value]) => (
                <div key={key} className="bg-slate-900/50 rounded-lg p-3">
                  <p className="text-slate-400 text-xs mb-1">{key.toUpperCase().replace('_', '-')}</p>
                  <p className={`text-2xl font-bold ${getScoreColor(value)}`}>
                    {(value * 100).toFixed(1)}%
                  </p>
                  <div className="w-full bg-slate-700 rounded-full h-1.5 mt-2">
                    <div
                      className={`h-full rounded-full transition-all duration-500 ${getScoreBg(value)}`}
                      style={{ width: `${value * 100}%` }}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {showCUDA && (
          <div className="bg-slate-800/70 rounded-xl p-4">
            <h4 className="text-green-400 font-semibold mb-3 text-sm">{t.cudaMetrics}</h4>
            <div className="grid grid-cols-2 gap-3">
              {Object.entries(data.cuda).map(([key, value]) => (
                <div key={key} className="bg-slate-900/50 rounded-lg p-3">
                  <p className="text-slate-400 text-xs mb-1 capitalize">{key}</p>
                  <p className={`text-2xl font-bold ${getScoreColor(value)}`}>
                    {(value * 100).toFixed(1)}%
                  </p>
                  <div className="w-full bg-slate-700 rounded-full h-1.5 mt-2">
                    <div
                      className={`h-full rounded-full transition-all duration-500 ${getScoreBg(value)}`}
                      style={{ width: `${value * 100}%` }}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  );
}

export default BleuScoreQualityMetrics;